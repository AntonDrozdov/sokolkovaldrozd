@using System.Text
@model kcconstruction.Web.ViewModels.PictureDemonstratorViewModel

<div id="@Model.Id" class="modal fade kc-pictureDemonstrator" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container-fluid">

                    <div class="row justify-content-center no-gutters ">
                        <div class="col-md-12 logopic">
                            <img src="~/images/logos/kcconstruction_logo_large_alphach.png" />
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                <i class="far fa-window-close"></i>
                            </button>
                        </div>
                    </div>

                    <div class="row justify-content-center no-gutters">
                        <div id="@Model.Id-carousel" class="col-md-12 carousel slide kc-pictureDemonstrator-carousel" data-ride="carousel">
                            <div id="carousel-content" class="carousel-inner">
                                @for (int i=0; i<Model.PathToImages.Count;i++)
                                {
                                    <div class="carousel-item  @(i == 0 ? "active" : "")">
                                        <img class="d-block w-100" src="@Model.PathToImages[i]" alt="@i slide">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#@Model.Id-carousel" role="button" data-slide="prev">
                                <span aria-hidden="true">
                                    <i class="fas fa-chevron-left"></i>
                                </span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#@Model.Id-carousel" role="button" data-slide="next">
                                <span aria-hidden="true">
                                    <i class="fas fa-chevron-right"></i>
                                </span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

