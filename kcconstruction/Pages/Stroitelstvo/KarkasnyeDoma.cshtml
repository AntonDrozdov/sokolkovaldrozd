@page
@model kcconstruction.Pages.Stroitelstvo.KarkasnyeDomaModel
@{
    ViewData["Title"] = "KC Строительство - Каркасные дома";
    Layout = "~/Pages/Layouts/_Layout.cshtml";
}

<h1 class="kc-h1">Каркасные дома</h1>
<div class="row kc-main-page no-gutters ">
    <div class="kc-text">
        Ниже представлены фото со строительных площадок наших объектов - каркасных домов
    </div>
</div>

@foreach (var gallery in Model.Galleries)
{
    <div class="row justify-content-center no-gutters kc-projects-page">
        @await Component.InvokeAsync("GallerySnippet", gallery)
    </div>
}

